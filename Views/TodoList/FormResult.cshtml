@model Capstone.Models.DomainModels.TodoListViewModel

<form class="row g-3 needs-validation " asp-controller="TodoList" asp-action="Welcome" method="post">

    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Item Description</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" asp-for="ItemDes" required></textarea>
    </div>
    <br />
    <div class="form-group row">
        <label for="example-date-input" class="col-2 col-form-label">Date</label>
        <div class="col-10">
            <input class="form-control" type="date" value="2011-08-19" id="example-date-input" asp-for="DueDate" required>
        </div>
    </div>
    <br />
    <div class="form-check">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
        <label class="form-check-label" for="flexRadioDefault1">
           Com
        </label>
    </div>
    <br />
    <div class="form-check">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
        <label class="form-check-label" for="flexRadioDefault2">
            Default checked radio
        </label>
    </div>
    <br />


    <div class="col-12">
        <button type="submit" class="btn btn-primary">Sign in</button>
    </div>

</form>


